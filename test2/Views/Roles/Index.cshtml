@model IEnumerable<Microsoft.AspNet.Identity.IRole>

@{
    ViewBag.Title = "Роли";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список пользователей</h2>
<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@Html.DisplayFor(m => role.Name)</td>
            <td>
                <form action="@Html.ActionLink("Удалить", "Delete", new { id = role.Id })" method="post">
                    <button type="submit" class="btn btn-sm btn-danger"> Удалить</button>
                </form>
            </td>
        </tr>
    }
</table>
@Html.ActionLink("Добавить роль", "Create")
@Html.ActionLink("Список пользователей", "UserList")